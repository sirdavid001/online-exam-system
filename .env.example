SECRET_KEY=replace-with-a-long-random-secret
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost,testserver
# On Render, you can set this explicitly to your domain, e.g. ALLOWED_HOSTS=online-exam-system-dt8t.onrender.com

# Optional in local dev; required for hosted Postgres deployments.
# On Render, set DEBUG=False.
# Optional: if you run collectstatic in Build Command, enable manifest mode too:
# USE_MANIFEST_STATICFILES=True
# python manage.py collectstatic --noinput

# DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DBNAME

# Optional email settings. If omitted, contact form emails print to console.
# Option A (recommended for your setup): Brevo API mode.
# BREVO_API_KEY=your-brevo-api-key
# BREVO_SENDER_NAME=Dennis Osadebay University Exam Office
# BREVO_SENDER_EMAIL=no-reply@your-domain.com
# DEFAULT_FROM_EMAIL=no-reply@your-domain.com
# EMAIL_RECEIVING_USER=support@your-domain.com,admin@your-domain.com
#
# Option B: SMTP mode (Gmail or any SMTP provider).
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=your-email@gmail.com
# EMAIL_RECEIVING_USER=admin@example.com,owner@example.com
#
# Brevo SMTP example:
# EMAIL_HOST=smtp-relay.brevo.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-login@smtp-brevo.com
# EMAIL_HOST_PASSWORD=your-brevo-smtp-key

# Optional startup safety on Render: run migrations before gunicorn boots.
# RUN_MIGRATIONS_ON_STARTUP=True

# Optional admin bootstrap on startup (Render-safe).
# Set both username and password to auto-create/update an admin account.
# DJANGO_SUPERUSER_USERNAME=admin
# DJANGO_SUPERUSER_PASSWORD=change-this-now
# DJANGO_SUPERUSER_EMAIL=admin@example.com
